-- Steal a Brainrot Mobile Key System + Script (Delta Executor)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

-- ===== KEY SYSTEM =====
local correctKey = "food"
local input = LocalPlayer:PromptInput("Enter Key:", "")

if input ~= correctKey then
    print("Wrong key! Script stopped.")
    return -- stop script
end

print("Key correct! Access granted.")

-- ===== MAIN SCRIPT =====

-- Settings
local Speed = 100
local JumpPower = 150
local AutoSteal = true
local Noclip = true
local TeleportDistance = 20
local BasePosition = RootPart.Position

-- Apply Speed and JumpPower
Humanoid.WalkSpeed = Speed
Humanoid.JumpPower = JumpPower

-- ===== MOBILE INPUT FUNCTIONS =====
-- Use PromptInput for actions instead of keyboard

local function TeleportForward()
    RootPart.CFrame = RootPart.CFrame + RootPart.CFrame.LookVector * TeleportDistance
end

local function TeleportBackward()
    RootPart.CFrame = RootPart.CFrame - RootPart.CFrame.LookVector * TeleportDistance
end

local function SaveBase()
    BasePosition = RootPart.Position
    print("Base saved!")
end

local function TeleportToBase()
    RootPart.CFrame = CFrame.new(BasePosition)
    print("Teleported to base!")
end

-- ===== AUTO STEAL =====
RunService.RenderStepped:Connect(function()
    if AutoSteal then
        local tool = Character:FindFirstChildWhichIsA("Tool")
        if tool and tool.Name == "Brainrot" then
            RootPart.CFrame = CFrame.new(BasePosition)
        end
    end
end)

-- ===== NOCIP =====
RunService.Stepped:Connect(function()
    if Noclip then
        for _, part in pairs(Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)

-- ===== MOBILE BUTTON MENU =====
while true do
    local action = LocalPlayer:PromptInput("Enter Action: forward/backward/savebase/tobase", "")
    if action == "forward" then
        TeleportForward()
    elseif action == "backward" then
        TeleportBackward()
    elseif action == "savebase" then
        SaveBase()
    elseif action == "tobase" then
        TeleportToBase()
    else
        print("Invalid action!")
    end
end
